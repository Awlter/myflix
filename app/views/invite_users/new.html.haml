%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag invite_users_path, class: "invite" do
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          = hidden_field_tag "invite_user[invitor]", current_user.token
          .form-group
            = label_tag :invite_user_name, "Friend's Name"
            .row
              .col-sm-4
                = text_field_tag "invite_user[name]", nil, class: "form-control"
          .form-group
            = label_tag :invite_user_email, "Friend's Email Address"
            .row
              .col-sm-4
                = text_field_tag "invite_user[email]", nil, class: "form-control"
          .form-group
            = label_tag :invite_user_message, "Invitation Message"
            .row
              .col-sm-6
                = text_area_tag "invite_user[message]", "Please join this really cool site!", rows: 6, class: "form-control"
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
