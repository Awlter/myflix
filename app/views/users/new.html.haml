%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6", id: "payment-form" do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: 'Email Addreass'
          = f.password_field :password
          = f.text_field :full_name, label: 'Full Name'
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.credit_card
          %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_DcUmDlGJDzj8ggwqZ4Z94aio" data-amount="990" data-image="https://stripe.com/img/documentation/checkout/marketplace.png" data-locale="auto" data-currency="usd")
